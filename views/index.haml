    :javascript
      var query_species = "";
      var query_platform = "";
      var query_type = "";
      var search_query = "";
      $(document).ready(function(){
        $("#free_keyword").change(function(){
          search_query = $("#free_keyword").val();
          console.log(search_query);
        });
        $("#submit_condition").click(function(){
          window.location = "./search?species=" + query_species +"&type=" + query_type + "&instrument=" + query_platform +"&search_query=" + search_query;
        });
      })
