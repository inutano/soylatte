    / This page is replaced by static public/index.html file on actual operation,
    / and used only in rendering test.

  %body
    #container
      #header
        .content
          .box.box1
            %h1
              DBCLS
              %span.or SRA
          .box.box2
            %img{:src => "#{app_root}/images/DBCLS_SRA_logo.png"}
          .box.box3
            %p
              %span.em
                DISCOVER
                %br Interesting & Available SRA Data

      #main
        .content
          %h2 Trends & Search SRA data
          .row
            .box-r →
              %a{:href => "../trends.html"} for more detail
          .row.trends
            .box.tob
              %h3 Species
              #col1_list.ranking
              #col1_bars.col_bars
              #col1_form
                %input{:type => "text", :size => "15", :placeholder => "&#xF002; Search"}
            .box
              %h3 Study Type
              #col2_list.ranking
              #col2_bars.col_bars
              #col2_form
                %input{:type => "text", :size => '15', :placeholder => "&#xF002; Search"}
            .box
              %h3 Platform
              #col3_list.ranking
              #col3_bars.col_bars
              #col3_form
                %input{:type => "text", :size => "15", :placeholder => "&#xF002; Search"}
            .box
              %h3 Usage
              .lists
                %ul
                  %li Click bars or bubbles and you can see more details of selected data.
                  %li Input keywords and you can view ratio of feature selection.
                  %li You can see result of combined search criteria too.
              .col_bars
          .row.search
            %h3 Free Keyword
            %input{:type => "text", :size => "40"}
            %button{:type => "button"} Submit

          / Publication Section
          %h2 Publications
          .row
            .box-r →
              %a{:href => "sra.dbcls.jp/cgi-bin/publication.cgi"} Full Publication List
          %h3 New Publications
          .row.hot
