%html
  %head{:lang => "en"}
    %meta{:charset => "UTF-8"}
    %title DBCLS SRA
    %link{:href => "css/sra15.css", :rel => "stylesheet"}
    %link{:href => "http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css", :rel => "stylesheet"}
    %script{:src => "https://code.jquery.com/jquery-1.11.2.min.js", :type => "text/javascript"}
    %script{:src => "js/d3.min.js"}
    %script{:src => "js/bootstrap.min.js"}

  %body
    #container
      #header
        .content
          / Header section
          .box.box1
            %h1
              DBCLS
              %span.or SRA
          .box.box2
            %img{:src => "images/DBCLS_SRA_logo.png"}
          .box.box3
            %p
              %span.em DISCOVER
              %br
                Interesting &amp; Available SRA Data

      - if @not_found
        .news
          .alert.alert-warning.alert-dismissible{ :role => "alert" }
            %button.close{ :type => "button", "data-dismiss" => "alert", "aria-label" => "Close"}
              %span{ "aria-hidden" => "true" }
                &times;
            404 Not Found

      #main
        .content
          / Trends section
          %h2 Trends &amp; Search SRA data
          .row
            .box-r
              →
              %a{:href => "/trends"} for more detail
          .row.trends
            .box.tob
              %h3 Species
              #col1_list.ranking
              #col1_bars.col_bars
              #col1_form
                %input{:placeholder => " Search", :size => "15", :type => "text"}/
            .box
              %h3 Study Type
              #col2_list.ranking
              #col2_bars.col_bars
              #col2_form
                %select#select_type{:name => "type"}
                  %option.disabled{:disabled => true, :selected => true, :value => ""} Select your option
                  %option{:value => "Genome"} Whole Genome Sequencing
                  %option{:value => "Transcriptome"} Transcriptome Analysis
                  %option{:value => "Epigenetics"} Epigenetics
                  %option{:value => "Metagenomics"} Metagenomics
                  %option{:value => "Cancer Genomics"} Cancer Genomics
                  %option{:value => "Other"} Other
                  %option{:value => ""} None
                  /
                    %option{:value => "Resequencing"} Resequencing
                    %option{:value => "RNASeq"} RNASeq
                    %option{:value => "Genomics"} Population Genomics
                    %option{:value => "Gene"} Gene Regulation Study
                    %option{:value => "Exome Sequencing"} Exome Sequencing
                    %option{:value => "Pooled Clone Sequencing"} Pooled Clone Sequencing
                    %option{:value => "Synthetic Genomics"} Synthetic Genomics
                    %option{:value => "Forensic or Paleo-genomics"} Forensic or Paleo-genomics
            .box
              %h3 Platform
              #col3_list.ranking
              #col3_bars.col_bars
              #col3_form
                %input{:placeholder => " Search", :size => "15", :type => "text"}/
            .box
              %h3 Usage
              .lists
                %ul
                  %li Click bars or bubbles and you can see more details of selected data.
                  %li Input keywords and you can view ratio of feature selection.
                  %li You can see result of combined search criteria too.
              %h3 Search Conditions
              #search_condition
                %ul.species
                %ul.type
                %ul.platform
                %ul.search_result
          .row.search
            %h3 Free Keyword
            %input#free_keyword{:name => "search_query", :placeholder => "Free Keyword", :size => "40", :type => "text"}
              %button#submit_condition Submit Conditon

          .row
            .box-r
              →
              %a{:href => "cgi-bin/taxon2study.cgi"} Advanced Taxonomy Search (β)

          / Publication section
          %h2 Publications
          .row
            .box-r
              →
              %a{:href => "/trends#fpl"} Full Publication List

          %h3 New Publications
          .row.hot
            #hot-ele-1.hot-ele
              .icon
                %img{:src => "http://g86.dbcls.jp/~togoriv/wp-content/uploads/2011/08/mouse_sm.png", :width => "50px"}
